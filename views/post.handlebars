<section class="card">
  <div class="card-body">
    {{#if post.post}}
    <header>
    <h3>{{post.post.title}}</h3>
    <p>Posted by {{post.post.user.username}} on {{post.post.post_date}}</p>
    </header>
    <p>{{post.post.content}}</p>
  </div>
</section>
<section class="card">
  <div class="card-body">
    <header></header>
    {{#each post.post.comments}}
    <p>{{this.content}}</p>
    <p>Posted on {{post_date}} </p>
    {{/each}}
    {{#if post.post.comments}}
    <p>By {{post.author.[0].username}}</p>
    {{/if}}
    {{else}}
    <header>
    <h3>{{post.title}}</h3>
    <p>Posted by {{post.user.username}} on {{post.post_date}}</p>
    </header>
    <p>{{post.content}}</p>
    {{/if}}
  </div>
</section>